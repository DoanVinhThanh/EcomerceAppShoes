<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">

        <!-- Thanh tiêu đề -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_Back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_arrow_back_ios_24"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/tvProductTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Air Jordan 1 Low"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/btnCart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/shopping_bag"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <!-- Hình ảnh sản phẩm -->
        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitCenter"
            android:src="@drawable/nike_airjordan1"
            android:layout_marginTop="20dp"/>


        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/tvProductCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Air Jordan 1 Low"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <!-- Giá sản phẩm -->
        <TextView
            android:id="@+id/tvProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.239.000 đ"
            android:textSize="18sp"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:layout_marginTop="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Size:"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            />
        <!-- Chọn kích thước -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSelectSize"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Select Size ▼"
            android:background="@drawable/bg_sign_in"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="10dp"/>


        <!-- Nút Thêm vào giỏ hàng -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddToCart"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Add to Bag"
            android:background="@drawable/bg_sign_up"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddtoFav"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Favorite"
            android:background="@drawable/bg_sign_in"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="40dp"/>


        <!-- Mô tả sản phẩm -->
        <TextView
            android:id="@+id/tvProductDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Always in, always fresh. The Air Jordan 1 Low..."
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>


    </LinearLayout>
</ScrollView>
